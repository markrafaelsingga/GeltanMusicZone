@model InstrumentShop.Models.AdminProfile
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/AdminProfile.css" rel="stylesheet" />

</head>
<section class="home-section">
    <div class="home-content">
        <i class='bx bx-menu'></i>
        <span class="text">Profile</span>
    </div>
    <div class="profile-container">
        <div class="profile-column">
            <div class="profile-header">
                <img src="https://placekitten.com/150/150" alt="Profile Picture" class="profile-picture">
                <h1>Mark Rafael Singga</h1>
                
            </div>
        </div> 
        <div class="profile-column">
            <div class="profile-details">
                <h2>Profile Settings</h2>
                <div class="form-group">
                    <label for="firstName">First Name:</label>
                    <input type="text" id="firstName" value="@Model.firstName" class="form-control" placeholder="@Model.firstName">
                </div>
                <div class="form-group">
                    <label for="mi">M.I:</label>
                    <input type="text" id="mi" value="@Model.mi" class="form-control" placeholder="@Model.mi">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name:</label>
                    <input type="text" id="lastName" value="@Model.lastName" class="form-control" placeholder="@Model.lastName">
                </div>
                <div class="form-group">
                    <label for="Phone">Phone:</label>
                    <input type="text" id="Phone" value="@Model.Phone" class="form-control" placeholder="@Model.Phone">
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <input type="text" id="Address" value="@Model.Address" class="form-control" placeholder="@Model.Address">
                </div>
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="text" id="Email" value="@Model.Email" class="form-control" placeholder="@Model.Email">
                </div>
                <!-- Add more form fields as needed -->
                
                <button onclick="@Url.Action("EditProfile","AdminProfile")" class="btn btn-primary">Save Profile</button>
                
            </div>
        </div>
    </div>
    <script src="~/error.js"></script>
</section>
