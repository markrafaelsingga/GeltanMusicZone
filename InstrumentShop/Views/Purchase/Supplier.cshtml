        <!-- Search for suppliers -->
        <!-- Loop for suppliers -->
        <div class="row justify-content-center">
            @model List<supplierDetails>

            <div class="row">
                @foreach (var supplier in Model)
                {
                    <div class="col-lg-4 col-md-6" style="margin-bottom: 20px;">
                        <div class="supplier-card-single">
                            <div class="content-main-top">
                                <ul class="list-unstyled d-flex align-items-center justify-content-between">
                                    <li><i class="fas fa-truck"></i>&nbsp; Supplier ID: &nbsp; @supplier.sup_id </li>
                                </ul>
                                <h4><a>@supplier.sup_company</a></h4>
                                <p>Contact person:&emsp;@supplier.sup_fname &nbsp;@supplier.sup_mi . &nbsp; @supplier.sup_lname </p>
                                <p>Email:&emsp;@supplier.sup_email</p>
                                <p>Contact #:&emsp;@supplier.sup_phone</p>
                                <p>Address:&emsp;@supplier.sup_address</p>
                                <div class="top-content-border d-flex align-items-center justify-content-between mt-4 pt-4">
                                    <a class="btn btn-style-primary" style="margin-left: 200px" href="/Purchase/SupplierDetails?supId=@supplier.sup_id">
                                        Know Details <i class="fas fa-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Loop for suppliers -->
        <!-- //Pagination -->
        <div class="pagination-style text-center mt-5">
            <ul>
                <li>
                    <a href="@Url.Action("Supplier", new { page = 1, pageSize = ViewBag.PageSize })" class="@(ViewBag.PageNumber == 1 ? "not-allowed disabled" : "")">
                        <span class="fa fa-angle-double-left" aria-hidden="true"></span>
                    </a>
                </li>

                @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize); i++)
                {
                    <li class="@(i == ViewBag.PageNumber ? "active" : "")">
                        <a href="@Url.Action("Supplier", new { page = i, pageSize = ViewBag.PageSize })">@i</a>
                    </li>
                }

                <li>
                    <a href="@Url.Action("Supplier", new { page = ViewBag.PageNumber + 1, pageSize = ViewBag.PageSize })" class="@(ViewBag.PageNumber >= Math.Ceiling((double)ViewBag.TotalItems / ViewBag.PageSize) ? "not-allowed disabled" : "")">
                        <span class="fa fa-angle-double-right" aria-hidden="true"></span>
                    </a>
                </li>
            </ul>
        </div>
        <!-- //Pagination -->
    </div>
</div>
