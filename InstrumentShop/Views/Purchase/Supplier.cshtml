                <li><a href="/Purchase/Index">Home</a></li>
                <li class="active"><i class="fas fa-angle-right"></i>Supplier</li>
            </ul>
        </div>
    </div>
</section>
<!-- //inner banner -->
<!-- Content block -->
<div class="w3l-grids-block-5 py-5">
    <div class="container py-md-5 py-4">
        <div class="title-main text-center mx-auto mb-md-5 mb-4" style="max-width:500px;">
            <p class="text-uppercase">Geltan's Music Zone</p>
            <h3 class="title-style">Suppliers</h3>
        </div>

        <!-- Search for suppliers -->
        <!--<div class="search-container">
            <form-->
        @*action="@Url.Action("SearchSupplier", "Home")"*@ <!--method="post">-->
