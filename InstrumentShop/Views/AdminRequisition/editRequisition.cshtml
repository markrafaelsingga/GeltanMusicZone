@using InstrumentShop.Models;

@model List<ViewRequisitionForm>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Requisition Details</title>
    <link href="~/Gridview.css" rel="stylesheet" />
    <link href="~/Content/modal.css" rel="stylesheet" />
    <link href="~/Content/StaffTextBox.css" rel="stylesheet" />
    <link href="~/Content/staff.css" rel="stylesheet" />
    <style>
        .home-section {
            font-family: Helvetica;
            -webkit-font-smoothing: antialiased;
        }

        .requisition-input {
            font-size: 15px;
        }

        .total-cost {
            font-weight: 600;
        }
    </style>
</head>
<body>

    <section class="home-section">
        <div class="home-content">
            <i class='bx bx-menu'></i>
            <span class="text">Update requisition details</span>
        </div>

        <div class="table-wrapper">
            <br />
            <div class="row requisition-block">
                <div class="col-sm-6" style="margin-left: 20px; width:20%;">
                    <p style="font-size: 15px">Status:</p>
                    <select name="status" id="status" class="requisition-input">
                        <option value="Pending" @(Model.First().RF_Status == "Pending" ? "disabled selected" : "")>Pending</option>
                        <option value="Approved" @(Model.First().RF_Status == "Approved" ? "disabled selected" : "")>Approve</option>
                        <option value="Declined" @(Model.First().RF_Status == "Declined" ? "disabled selected" : "")>Decline</option>
                    </select>
                </div>

                <div class="col-sm-7 requisition-right">
                    <div class="input-grids">
                        <div class="row">
                            <div class="col-sm-6">
                                <p style="font-size: 15px"> Requisition Form #:</p>
                                <input type="text" name="price" id="price" placeholder="Requisition code #" class="requisition-input" disabled value="@Model.First().RF_Code" />
                            </div>
                            <div class="col-sm-6">
                                <p style="font-size: 15px"> Date requested:</p>
                                <input type="text" name="date" id="date" placeholder="Date requested" class="requisition-input" disabled value="@Model.First().RF_Daterequested" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="fl-table mx-auto" id="item-list" style="width: 96%">
                <colgroup>
                    <col width="3%">
                    <col width="12%">
                    <col width="10%">
                    <col width="25%">
                    <col width="6%">
                    <col width="6%">
                    <col width="8%">
                    <col width="8%">
                    <col width="5%">
                    <col width="5%">
                </colgroup>
                <thead>
                    <tr style="background-color: #fbb034; color: #000000;">
                        <th class="px-1 py-1 text-center">#</th>
                        <th class="px-1 py-1 text-center">Item</th>
                        <th class="px-1 py-1 text-center">Supplier</th>
                        <th class="px-1 py-1 text-center">Description</th>
                        <th class="px-1 py-1 text-center">Quantity</th>
                        <th class="px-1 py-1 text-center">Unit</th>
                        <th class="px-1 py-1 text-center">Price</th>
                        <th class="px-1 py-1 text-center">Total</th>
                        <th class="px-1 py-1 text-center">Edit</th>
                        <th class="px-1 py-1 text-center" style="background-color: #e53f31">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var form in Model)
                    {
                        <tr style="text-align: center">
                            <td><p class="row-number"></p></td>
                            <td>@form.RF_Item</td>
                            <td>@form.RF_Suppliercompany</td>
                            <td>@form.RF_Description</td>
                            <td>@form.RF_Quantity</td>
                            <td>@form.RF_Unit</td>
                            <td style="text-align: center">@form.RF_Price.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                            <td class="canvas-total-value">@form.RF_Total.ToString("C", new System.Globalization.CultureInfo("en-PH"))</td>
                            <td>
                                <form class="edit-form" method="post" action="@Url.Action("EditItem", "AdminRequisition")">
                                    <input type="hidden" name="edit_ID" value="@form.RF_ItemID" />
                                    <button class="btn btn-style-3 edit-btn" type="submit" style="color: white">
                                        <i class='bx bxs-edit-alt'></i>
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form class="delete-form" method="post" action="@Url.Action("DeleteItem", "AdminRequisition")">
                                    <input type="hidden" name="delete_ID" value="@form.RF_Itemcode" />
                                    <button class="btn btn-style-3 delete-btn" type="button" onclick="confirmDelete(this)" style="color: white">
                                        <i class="bx bxs-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                    <tr style="text-align: center; font-weight:600">
                        <td colspan="7" style="text-align: right; font-size: medium">
                            <button class="btn btn-style-3 edit-btn" type="button">
                                <i class='bx bxs-plus-square'></i>&emsp;<strong>Add Item</strong>
                            </button>&emsp;
                            Total estimated cost:
                        </td>
                        <td>
                            <p class="total-cost">@Model.First().RF_Estimatecost.ToString("C", new System.Globalization.CultureInfo("en-PH"))</p>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div class="text-center" style="display: flex; justify-content: center;">
                <form class="save-form" method="post" @*action="@Url.Action("ViewRequisition", "AdminRequisition")"*@>
                    <input type="hidden" name="request_ID" value="@Model.First().RF_ID" />
                    <button type="submit" class="btn btn-style btn-style-3" style="width: 200px">
                        <strong>SAVE</strong>
                    </button>
                </form>
                &emsp;
                <form class="cancel-form" method="post" action="@Url.Action("Requisition", "AdminRequisition")">
                    <button class="btn btn-style btn-style-3" type="submit" style="width: 200px">
                        <strong>CANCEL</strong>
                    </button>
                </form>
            </div>
            <br />
        </div>
    </section>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        // ===Add row numbers to each row in the table
        document.addEventListener("DOMContentLoaded", function () {
            var rowNumbers = document.querySelectorAll('.row-number');
            rowNumbers.forEach(function (element, index) {
                element.textContent = index + 1;
            });
        });

        // ===To delete an item
        function confirmDelete(button) {
            var confirmation = confirm("Are you sure you want to delete this requisition?");
            if (confirmation) {
                var form = button.closest('.delete-form');
                form.submit();
            }
        }
    </script>

</body>
</html>
